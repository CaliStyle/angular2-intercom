{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "target": "ES2016",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": false,
    "genDir": "dist"
  },
  "paths": {
    "@angular": [
      "./node_modules/@angular"
    ]
  }
}